    <script>
        let allSuppliers = [];
        document.addEventListener("DOMContentLoaded", function () {
            // Fetch suppliers and populate the table
            fetchSuppliers();
            // Event listener for the create supplier form
            document.getElementById("createSupplierForm").addEventListener("submit", function (event) {
                event.preventDefault();
                createSupplier();
            });
            // Event listener for the edit supplier form (modal)
            document.getElementById("editSupplierForm").addEventListener("submit", function (event) {
                event.preventDefault();
                updateSupplier();
            });
        });

        function fetchSuppliers() {
            // Replace the URL with your supplier API endpoint
            fetch("http://localhost:5358/api/suppliers")
                .then(response => response.json())
                .then(suppliers => {
                    allSuppliers = suppliers;
                    const supplierTableBody = document.getElementById("supplierTableBody");
                    supplierTableBody.innerHTML = "";

                    suppliers.forEach(supplier => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${supplier.supplierName}</td>
                            <td>${supplier.emailAddress}</td>
                            <td>
                                <button class="button-style" onclick="openEditModal(${supplier.supplierId},'${supplier.supplierName}','${supplier.emailAddress}')">Edit</button>
                            </td>
                        `;
                        supplierTableBody.appendChild(row);
                    });
                })
                .catch(error => {
                    console.error('Fetch suppliers error:', error);
                });
        }

        function createSupplier() {
            const supplierName = document.getElementById("supplierName").value;
            const emailAddress = document.getElementById("emailAddress").value;

            // Add code to collect other supplier properties from input fields

            fetch("http://localhost:5358/api/suppliers", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                "supplierName": supplierName,
                "emailAddress": emailAddress,
                "phoneNumber": "555-1234",
                "contactPerson": "John Supplier",
                "street": "123 Main St",
                "city": "Cityville",
                "state": "Stateville",
                "postalCode": "12345",
                "status": "Active",
                "rating": 4,
                "createdAt": "2023-10-19T18:19:21.683",
                "updatedAt": "2023-10-19T18:19:21.683"
            }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(() => {
                    fetchSuppliers();
                    document.getElementById("createSupplierForm").reset();
                })
                .catch(error => {
                    console.error('Create supplier error:', error);
                });
        }

        function openEditModal(supplierId, supplierName, emailAddress) {
            // Populate the edit supplier form (modal) with data
            document.getElementById("editSupplierId").value = supplierId;
            document.getElementById("editSupplierName").value = supplierName;
            document.getElementById("editEmailAddress").value = emailAddress;

            // Add code to populate other input fields with existing supplier data

            $('#editSupplierModal').modal('show');
        }

        function updateSupplier() {
            const supplierId = document.getElementById("editSupplierId").value;
            const supplierName = document.getElementById("editSupplierName").value;
            const emailAddress = document.getElementById("editEmailAddress").value;

            const supplier = allSuppliers.find(supp => supp.supplierId == supplierId);

            // Add code to collect other supplier properties from input fields
            fetch(`http://localhost:5358/api/suppliers/${supplierId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                "supplierId": supplierId,
                "supplierName": supplierName,
                "emailAddress": emailAddress,
                "phoneNumber": supplier.phoneNumber,
                "contactPerson": supplier.contactPerson,
                "street": supplier.street,
                "city": supplier.city,
                "state": supplier.state,
                "postalCode": supplier.postalCode,
                "status": supplier.status,
                "rating": supplier.rating,
                "createdAt": supplier.createdAt,
                "updatedAt": supplier.updatedAt
            }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    //return response.json();
                })
                .then(() => {
                    fetchSuppliers();
                    $('#editSupplierModal').modal('hide');
                })
                .catch(error => {
                    console.error('Update supplier error:', error);
                });
        }

    </script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get all nav items
        const navItems = document.querySelectorAll('.nav-item');
        const navLinks = document.querySelectorAll('.nav-link');

        // Function to remove active class from all items
        function removeActiveClass() {
            navItems.forEach((innerItem) => innerItem.classList.remove('active-nav-item'));
        }

        // Add click event listener to each nav item
        navItems.forEach((item, index) => {
            item.addEventListener('click', function () {
                removeActiveClass();
                // Add active class to clicked item
                this.classList.add('active-nav-item');
            });
        });

        // Check current URL and set active class
        const currentURL = window.location.pathname;
        navLinks.forEach((link, index) => {
            if (link.getAttribute('href') === currentURL) {
                removeActiveClass();
                navItems[index].classList.add('active-nav-item');
            }
        });
    });

</script>    

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Fetch items from the server
            fetch("http://localhost:5358/api/supplieritems")
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(items => {
                    // Populate the table with items
                    const itemTableBody = document.getElementById("itemTableBody");

                    items.forEach(item => {
                        const row = document.createElement("tr");

                        for (let i = 1; i < Object.keys(item).length; i++) {
                            const key = Object.keys(item)[i];
                            const cell = document.createElement("td");
                            if(key != "supplierId"){
                                cell.textContent = item[key];
                                row.appendChild(cell);
                            }

                        }

                        // Add Edit button with onclick event
                        const editButton = document.createElement("button");
                        editButton.textContent = "Edit";
                        editButton.className = "subsci_btn";
                        editButton.addEventListener("click", function () {
                            // Call the function to handle item editing
                            editItem(item);
                        });

                        const actionCell = document.createElement("td");
                        actionCell.appendChild(editButton);
                        row.appendChild(actionCell);

                        itemTableBody.appendChild(row);
                    });
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        });
   

        // Function to handle item editing
        function editItem(item) {
        // Open the modal
        $('#editModal').modal('show');

        // Get the form from the modal
        const editForm = document.getElementById("editItemForm");

        // Populate the form fields with item data
        editForm.elements["itemName"].value = item.itemName;
        editForm.elements["itemDescription"].value = item.itemDescription;
        editForm.elements["itemCostPrice"].value = item.itemCostPrice; // Update this to use the actual property name if different
        editForm.elements["itemSupplierPrice"].value = item.itemSupplierPrice;
        editForm.elements["unitsInStock"].value = item.unitsInStock;
        editForm.elements["supplierId"].value = item.supplierId;
        editForm.elements["dateReceived"].value = item.dateReceived;
        editForm.elements["bestBeforeDate"].value = item.bestBeforeDate;
        editForm.elements["expiryDate"].value = item.expiryDate;

        // Add click event for the "Submit Edit" button in the modal
        const submitEditBtn = document.getElementById("submitEditBtn");
        submitEditBtn.addEventListener("click", function () {
            // Call the function to submit the edited item
            submitEdit(item.supplierItemId, editForm);
            // Close the modal after submission
            $('#editModal').modal('hide');
        });
    }
        // Function to submit the edited item
        function submitEdit(itemId, editForm) {
            // Get edited data from the form
            const formData = new FormData(editForm);

            function convertToDataType(value) {
                if (!isNaN(value)) {
                    // If it's a number
                    return parseFloat(value);
                } else {
                    // If it's a date
                    const dateValue = new Date(value);
                    if (!isNaN(dateValue.getTime())) {
                        return value;
                    }
                }
                // Otherwise, return the original value
                return value;
            }            

            const jsonData = {};
            jsonData["supplierItemId"] = itemId;
            formData.forEach((value, key) => {
                // Ensure the data type is preserved
                jsonData[key] = convertToDataType(value);
            });

            console.log("The item Id is : ",itemId);

            console.log("The data being submitted is: ", jsonData);

            // Use fetch to submit the edited data to the specified URL
            fetch(`http://localhost:5358/api/supplieritems/${itemId}`, {
                method: "PUT",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(jsonData),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    //return response.json();
                })
                .then(data => {
                    // Handle the success response data if needed
                    console.log(data);
                })
                .catch(error => {
                    // Handle errors
                    console.error('Fetch error:', error);
                });
        }
    </script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get all nav items
        const navItems = document.querySelectorAll('.nav-item');
        const navLinks = document.querySelectorAll('.nav-link');

        // Function to remove active class from all items
        function removeActiveClass() {
            navItems.forEach((innerItem) => innerItem.classList.remove('active-nav-item'));
        }

        // Add click event listener to each nav item
        navItems.forEach((item, index) => {
            item.addEventListener('click', function () {
                removeActiveClass();
                // Add active class to clicked item
                this.classList.add('active-nav-item');
            });
        });

        // Check current URL and set active class
        const currentURL = window.location.pathname;
        navLinks.forEach((link, index) => {
            if (link.getAttribute('href') === currentURL) {
                removeActiveClass();
                navItems[index].classList.add('active-nav-item');
            }
        });
    });

</script>    

            username: document.getElementById("signup-form").elements["Username"].value,
            userEmail: document.getElementById("signup-form").elements["UserEmail"].value,
            userPassword: document.getElementById("signup-form").elements["UserPassword"].value,
            userContact: document.getElementById("signup-form").elements["UserContact"].value,
            userRole: 0 // 
         };
         // Send registration data to the server
         fetch('http://localhost:5358/api/Auth/RegisterUser', {
            method: 'POST',
            headers: {
               'Content-Type': 'application/json',
            },
            body: JSON.stringify(registerDto),
         })
            .then(response => response.json())
            .then(data => {
               // Handle the response from the server
               

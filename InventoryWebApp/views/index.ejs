   <script>

      function login(event) {
         // Prevent the default form submission
         event.preventDefault();

         // Collect form data
         var emailInput = document.getElementById("request").querySelector('input[name="Email"]');
         var passwordInput = document.getElementById("request").querySelector('input[name="Password"]');

         var loginDto = {
            username: emailInput.value,
            userPassword: passwordInput.value
         };

         // if (loginDto.username === "admin@email.com") { //admin
         //    window.location.href = "/createmenu";
         // } else if (loginDto.username === "employee@email.com") { // customer
         //    window.location.href = "/shop";
         // } else if (loginDto.username === "tshimolong@gmail.com") { // supplier
         //    window.location.href = "/additems";
         // }

         // Send the request
         fetch('http://localhost:5358/api/Auth/LoginUser', {
            method: 'POST',
            headers: {
               'Content-Type': 'application/json',
            },
            body: JSON.stringify(loginDto),
         })
            .then(response => {
               if (!response.ok) {
                  throw new Error(`HTTP error! Status: ${response.status}`);
               }
               return response.json();
            })
            .then(data => {
               // Handle the response from the server
               if (data.userRole === 1) {
                  // Login customer
                  window.location.href = "/shop";
               } else if (data.userRole === 2) {
                  // Login supplier
                  window.location.href = "/additems";
               } else if (data.userRole === 3) {
                  // Login supplier
                  window.location.href = "/createmenu";
               }
            })
            .catch((error) => {
               console.error('Error:', error);
            });
      }


      function signup() {
         // Collect form data
